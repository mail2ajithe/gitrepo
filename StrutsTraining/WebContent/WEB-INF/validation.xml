<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>




    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <formset>
        <form name="ValidateLoginForm">
            <field
                property="userName"
                depends="required">
                    <arg key="ValidateLoginForm.username"/>
            </field>
            <field
                property="phoneNumber"
                depends="required">
                    <arg key="ValidateLoginForm.phoneNumber"/>
            </field>
            <field
                property="password"
                depends="required">
                 <arg key="ValidateLoginForm.password"/>
            </field>
        </form>
        

    </formset>

 </form-validation>
